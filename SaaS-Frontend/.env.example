# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# Base URL for OAuth redirects (e.g., http://127.0.0.1:5000 or https://yourdomain.com)
BASE_URL=http://127.0.0.1:5000

# Token Encryption (REQUIRED for OAuth - 32+ character random string)
ENCRYPTION_KEY=your-32-character-random-encryption-key-here

# Gmail OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Notion OAuth (optional)
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=
